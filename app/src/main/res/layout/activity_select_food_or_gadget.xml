<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cmu.cpe.se.blarblarblar.lookaround.Select_food_or_gadget"
    android:background="#fffffff7">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ชนิดของฝาก"
        android:id="@+id/textViewSelect"
        android:layout_alignBottom="@+id/imageButtonBack"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonBack"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageFood"
        android:src="@drawable/food_button"
        android:layout_below="@+id/textViewSelect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageGadget"
        android:src="@drawable/gatget_button"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imageFood" />

</RelativeLayout>
