<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cmu.cpe.se.blarblarblar.lookaround.select_food">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Food"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageBackButton4"
        android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_food1"
        android:src="@drawable/pork_tab"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/imageBackButton4"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_food2"
        android:src="@drawable/chili_sauce_noom_tab"
        android:cropToPadding="false"
        android:clickable="false"
        android:layout_below="@+id/imageView_food3"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_food3"
        android:src="@drawable/chili_sauce_ong_tab"
        android:layout_below="@+id/imageView_food1"
        android:layout_alignStart="@+id/imageView_food1" />

</RelativeLayout>
